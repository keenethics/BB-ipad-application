{
    "parser": "typescript-eslint-parser",
    "plugins": [
        "typescript",
        "meteor"
    ],
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:meteor/recommended"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "typescript/rule-name": "error",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}